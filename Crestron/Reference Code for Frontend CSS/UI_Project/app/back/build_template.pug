doctype html
html(data-ng-app='helium' )
    head
        if debug
            base(href='/')
        title Helium
        meta(name="viewport" content="initial-scale=1.0001, minimum-scale=1.0001, maximum-scale=1.0001, user-scalable=no")
        
        link(rel='stylesheet', href='libs/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='libs/font-awesome/css/font-awesome.min.css')
        link(rel='stylesheet', href='libs/angular-bootstrap/ui-bootstrap-csp.css')
        link(rel='stylesheet', data-ng-href='app.theme.css')
        
    body
        main(data-ng-view='' class="pull-front-main")

        script(src='libs/jquery/dist/jquery.min.js')
        script(src='libs/bootstrap/dist/js/bootstrap.min.js')
        script(src='libs/angular/angular.js')
        script(src='libs/angular-route/angular-route.min.js')
        script(src='libs/angular-animate/angular-animate.min.js')
        script(src="libs/angular-bootstrap/ui-bootstrap-tpls.min.js")
        script(src="libs/angular-translate/angular-translate.min.js")
        script(src="libs/angular-dynamic-locale/dist/tmhDynamicLocale.js")
        
        script.
            var __DEBUG = #{debug};
        if debug
            script(src='app.js')
        else
            script(src='app.min.js')
        for template in angular_templates
            script(type='text/ng-template' id=template.src) !{template.content}